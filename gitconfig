[user]
	name = Nik Martin
	email = nik.martin@gmail.com
[color]
	ui = auto
[init]
	templatedir = ~/.git_template
[push]
	default = simple
[core]
	autocrlf = input
	editor = nano
[guitool "Rebase onto..."]
	cmd = git rebase
	revprompt = yes
[guitool "Rebase/Continue"]
	 cmd = git rebase --continue
[guitool "Rebase/Skip"]
	 cmd = git rebase --skip
[guitool "Rebase/Abort"]
	 cmd = git rebase --abort
[guitool "Pull with Rebase"]
	 cmd = git pull --rebase
[gui]
[diff]
	tool = meld
[merge]
	tool = meld
[mergetool "meld"]
 cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[mergetool]
  keepBackup = false
[difftool]
	prompt = false
  cmd = meld
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
