[user]
	name = Nik Martin
	email = nik.martin@gmail.com
[color]
	ui = auto
[init]
	
[push]
	default = simple
[core]
	autocrlf = input
	editor = code --wait
[guitool "Rebase onto..."]
	cmd = git rebase
	revprompt = yes
[guitool "Rebase/Continue"]
	 cmd = git rebase --continue
[guitool "Rebase/Skip"]
	 cmd = git rebase --skip
[guitool "Rebase/Abort"]
	 cmd = git rebase --abort
[guitool "Pull with Rebase"]
	 cmd = git pull --rebase
[gui]

[diff]
	tool = vscode
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
	keepBackup = false
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE	
[credential]
	helper = cache --timeout=7200
